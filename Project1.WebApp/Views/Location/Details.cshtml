@model Project1.WebApp.ViewModels.LocationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Location Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    @if (Model.InventoryViewModels.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(Model => Model.InventoryViewModels.FirstOrDefault().LocationId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.InventoryViewModels.FirstOrDefault().ProductId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.InventoryViewModels.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.InventoryViewModels.FirstOrDefault().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.InventoryViewModels.FirstOrDefault().Amount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.InventoryViewModels)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>




<div>
    <br />
    <div class="text-right">
        @if (Context.Request.Cookies["CustomerID"] != null && Context.Request.Cookies["CustomerID"] != "0")
        {
        <p>
            @Html.ActionLink("Place New Order", "Shop", new { id = Model.LocationID})
        </p>
        }
    </div>
    <br />
    <br />
    <h3 class="text-center">Order History</h3>
    @if (Model.OrderHistoryViewModels.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(Model => Model.OrderHistoryViewModels.FirstOrDefault().OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.OrderHistoryViewModels.FirstOrDefault().LocationId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.OrderHistoryViewModels.FirstOrDefault().CustomerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.OrderHistoryViewModels.FirstOrDefault().Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.OrderHistoryViewModels.FirstOrDefault().Time)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderHistoryViewModels)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "OrderHistory", new { id = item.OrderId}, null)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>