@model IEnumerable<Project1.WebApp.ViewModels.LocationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Store Locations</h1>

    @*This is added for displaying locations*@
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.First().Address)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => location.Name)</td>
                    <td>@Html.DisplayFor(m => location.Address)</td>
                </tr>
            }
        </tbody>
    </table>
    @*the end of the add for location*@

</div>